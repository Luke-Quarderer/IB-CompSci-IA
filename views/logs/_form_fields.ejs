
<div>
    <label>Date</label>
    <input type="date" name="date" 
        value = "<%= log.date == null ? '' : 
        log.date.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Time Flown (in hours)</label>
    <input type="text" name="timeFlown" value = "<%= log.timeFlown %>">
</div>
<div>
    <label>Conditions</label>
    <input type="text" name="conditions" value = "<%= log.conditions %>">
</div>
<div>
    <label>Other Comments</label>
    <textarea name = "comments"><%= log.comments%></textarea>
</div>
<script type = "text/javascript">
</script>
<div>
    <label>VFR or IFR</label>
    <select name ="vfrIFR">
    <option value = "" selected disabled>--Please choose an option--</option>
    <option value = "<%= log.vfrIFR%>">VFR</option>
    <option value = "<%= log.vfrIFR%>"%>>IFR</option>
    </select>
    </div> 
<div>
    <label>Tail Number</label>
    <input type="text" name="tailNo" value = "<%= log.tailNo %>">
</div>
<div>
   <label>Solo or Instructor</label>
    <select name="solo">
    <option selected label = "Solo" value = "<%= log.solo %>">
    <option label = "Instructor" value = "<%= log.solo %>">
    </select>
    </div>
    <div>
        <label>Instructor License (if applicable)</label>
        <input type="text" name="instructorLicense" value = "<%= log.instructorLicense %>">
    </div>

