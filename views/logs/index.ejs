<style>
tr {
  border-bottom: 1px solid #ddd;
}
    tr:nth-child(even) {
  background-color: #D6EEEE;
}
</style>
<h2 class="page-header">Search Logs</h2>
<form action="/logs" method="GET">
    <div>
    <label>Flown After</label>
    <input type = "date" name="flownAfter" value= "<%= searchOptions.flownAfter %>">
    </div>
    <div>
        <label>Flown Before</label>
        <input type = "date" name="flownBefore" value= "<%= searchOptions.flownBefore %>">
        </div>
    <div>
        <label>VFR or IFR</label>
        <input type = "text" name="vfrIFR" value= "<%= searchOptions.vfrIFR %>">
        </div>
        <div>
            <label>Tail Number</label>
            <input type = "text" name="tailNo" value= "<%= searchOptions.tailNo %>">
            </div>
    <button type ="submit ">Search</button>
</form>
<br>
<div>
<table>
    <tr>
     <th>Date</th>  
     <th>Time Flown</th> 
     <th>VFR or IFR</th>
     <th>Conditions</th>
     <th>Tail Number</th>
     <th>Solo or Instructor</th>
     <th>Instructor License</th>
    </tr>
<% logs.forEach(log => { %>
    <tr>
    <td><%= log.date.toISOString().split('T')[0] %></td>
   <td><%= log.timeFlown %> hours</td>
    <td><%= log.vfrIFR %></td>
    <td><%= log.conditions %></td>
    <td><%= log.tailNo %></td>
    <td><%= log.solo%></td>
    <td><%= log.instructorLicense%></td>
    </tr>
<% })%>
</table>
</div>
