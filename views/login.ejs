<head>
    <link rel="stylesheet" type = "text/css" href = "login.css">
</head>
<h2>Login or Sign Up</h2>
<body>
    <div class = "container">
        <form class = "form" id = "login">
            <h3 class="form__title">Login</h3>
            <div class="form__message form__message--errror"></div>
            <div class="form__inputs-group">
                <input type ="text" class = "form__input" autofocus placeholder = "Username or email">
                <div class="form__input error message"> </div>
            </div>
            <div class="form__inputs-group">
                <input type ="password" class = "form__input" autofocus placeholder = "Password" >
                <div class="form__input error message"></div>
            </div>
            <button class="form__button" type = "submit">Enter</button>
            <p class="form__text">
                <a href="#" class="form__link">Forgot your password?</a>
            </p>
            <p class="form__text">
                <a class="form__link" href = "./" id = "linkCreateAccount">Create account</a>
            </p>
        </form>
        <form class = "form form--hidden" id = "createAccount">
            <h3 class="form__title">Create Account</h3>
            <div class="form__message form__message--errror"></div>
            <div class="form__inputs-group">
                <input type ="text" id = "signUpUsername" class = "form__input" autofocus placeholder = "Username">
                <div class="form__input error message"> </div>
            </div>
            <div class="form__inputs-group">
                <input type ="text" class = "form__input" autofocus placeholder = "Email">
                <div class="form__input error message"> </div>
            </div>
            <div class="form__inputs-group">
                <input type ="password" class = "form__input" autofocus placeholder = "Password" >
                <div class="form__input error message"></div>
            </div>
            <div class="form__inputs-group">
                <input type ="text" class = "form__input" autofocus placeholder = "Confirm password">
                <div class="form__input error message"> </div>
            </div>
            <button class="form__button" type = "submit">Enter</button>
            <p class="form__text">
                <a class="form__link" href = "./" id = "linkLogin">Sign in</a>
            </p>
        </form>
    </div>
</body>